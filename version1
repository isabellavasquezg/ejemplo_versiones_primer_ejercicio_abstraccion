#En esta versión la clase paciente no varía 
class Paciente():
    def __init__(self):
        self.__nombre = ""
        self.__cedula = 0
        self.__genero = ""
        self.__servicio = " "

    def verNombre(self): 
        return self.__nombre
    def verCedula(self):
        return self.__cedula
    def verGenero(self):
        return self.__genero
    def verServicio(self): 
        return self.__servicio
  
    def asignarNombre(self,n):
        self.__nombre = n
    def asignarCedula(self,c):
        self.__cedula = c
    def asignarGenero(self,g:
        self.__genero = g
    def asignarServicio(self,s):
        self.__servicio = s

class Sistema():
  def __init__(self): 
    self.__lista_pacientes = [ ]

