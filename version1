class Paciente():
    def __init__(self):
        self.__nombre = ""
        self.__cedula = 0
        self.__genero = ""
        self.__servicio = " "

    def verNombre(self): 
        return self.__nombre
    def verCedula(self):
        return self.__cedula
    def verGenero(self):
        return self.__genero
    def verServicio(self): 
        return self.__servicio
  
    def asignarNombre(self,n):
        self.__nombre = n
    def asignarCedula(self,c):
        self.__cedula = c
    def asignarGenero(self,g:
        self.__genero = g
    def asignarServicio(self,s):
        self.__servicio = s

class Sistema():
#Se crea una lista vacía para almacenar los pacientes ingresados 
  def __init__(self): 
    self.__lista_pacientes = [ ]
#El atributo numero_pacientes  no puede tener asigando un método asignar debido
#a que siempre dependerá del tamaño de la lista 
    self.__numero_pacientes = len(self.__lista_pacientes)

#Se crea un método (función) para el ingreso de los datos 
  def ingresarPaciente(self): 
    nombre = intput("Ingrese el nombre del paciente: \n ")
    cedula = int(input("Ingrese la cédula del paciente: \n "))
    genero = intput("Ingrese el género del paciente: \n ")
    servicio = intput("Ingrese el servicio donde se encuentra alojado el paciente: \n ")
#Luego se crean dentro del mismo método el objeto y se le adiciona la información 
    p = Paciente()
    p.asignarNombre(nombre)
    p.asignarCedula(cedula)
    p.asignarGenero(genero)
    p.asignarServicio(servicio)
#Agrego el objeto a la lista vacía que generé de pacientes 
    self.__lista_pacientes.append(p)
#Tambien debo actulizar la cantidad de pacientes en la lista 
    self.__numero_pacientes = len(self.__lista_pacientes)

  def verNumeroPacientes(self): 
    return self.__numero_pacientes 
  def verDatosPaciente(self): 
    cedula = int(input("Ingrese el número de documento del paciente que desea buscar: \n))
    for paciente in self.__lista_pacientes:
      if cedula == paciente.verCedula(): 
      print("Nombre: " + paciente.verNombre())
      print("Cédula: " + str(paciente.verCedula()))
      print("Género: " + paciente.verGenero())
      print("Servicio: " + paciente.verServicio())

#Ahora, llamamos a la clase sistema para que se puedan utilizar los métodos que allí se crearon
mi_sistema = Sistema()

#Creamos el ciclo While 

while True: 
  opcion = int(input('''
  
  Sistema informático (Ingrese 1, 2, 3 o 4 según lo requiera):

  1. Ingresar un nuevo pacientes 
  2. Ver en pantalla el número de pacientes 
  3. Ver los datos de un paciente 
  4. Salir del sistema  \n'''))
  if opcion == 1:
    mi_sistema.ingresarPaciente()
  elif opcion == 2: 
    print(f"Al momento hay: {str(mi_sistema.verNumeroPacinetes())} pacientes")
  elif opcion == 3: 
    mi_sistema.verDatosPaciente()
  elif opcion == 4: 
    break 
  else: 
    print("Opción inválida")